# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ VARIABLES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

# COLORS
RESET			=	\033[0m
RED				=	\033[0;31m
GREEN			=	\033[0;32m
YELLOW			=	\033[0;33m
BLUE			=	\033[0;34m
PURPLE			=	\033[0;35m
CYAN			=	\033[0;36m


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ PROGRAM }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

NAME			=	megaphone


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~{ COMPILATION }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

CC				=	c++
RM				=	rm -rf
CFLAGS			+=	-Wall -Wextra -Werror -std=c++98 


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ PATHS }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

OBJ_PATH		=	.obj


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ SOURCES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

SRCS 			=	$(addsuffix .cpp, \
					megaphone)

OBJS			=	$(SRCS:%.cpp=$(OBJ_PATH)/%.o)


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ RULES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

all: $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "${GREEN}> $(NAME) Compiled ${RESET}"

$(OBJ_PATH)/%.o: %.cpp
			@mkdir -p $(dir $@)
			@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) $(OBJ_PATH)
	@echo "${YELLOW}Objects removed${RESET}"

fclean:	clean
	@$(RM) $(NAME)
	@echo "${YELLOW}$(NAME) removed${RESET}"

re: clean all

.PHONY: all clean re fclean
